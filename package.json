{
  "name": "@spudly/eslint-config",
  "description": "Shareable ESLint config with all the best settings.",
  "author": "Stephen Sorensen <shuoink@gmail.com>",
  "license": "MIT",
  "main": "index.js",
  "scripts": {
    "postpublish": "greenkeeper-postpublish",
    "lint": "eslint index.js rules test",
    "test": "npm run lint",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "find-rules": "eslint-find-rules --unused",
    "precommit": "lint-staged",
    "snyk-protect": "snyk protect",
    "prepublish": "npm run snyk-protect"
  },
  "dependencies": {
    "babel-eslint": "^7.0.0",
    "eslint": "^3.17.1",
    "eslint-plugin-import": "^2.0.1",
    "eslint-plugin-jsx-a11y": "^6.0.0",
    "eslint-plugin-lodash-fp": "^2.1.3",
    "eslint-plugin-react": "^7.0.1"
  },
  "devDependencies": {
    "eslint-find-rules": "^1.14.3",
    "greenkeeper-postpublish": "^1.0.1",
    "husky": "^0.14.0",
    "lint-staged": "^4.0.0",
    "prettier": "^1.3.1",
    "semantic-release": "^6.3.2",
    "snyk": "^1.33.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/spudly/eslint-config.git"
  },
  "eslintConfig": {
    "extends": "./index.js",
    "parserOptions": {
      "sourceType": "script"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write --print-width=100 --single-quote --bracket-spacing=false",
      "git add"
    ]
  },
  "snyk": true
}
